---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard - 1li.tw">
  <main class="container mx-auto py-8 px-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-4xl font-bold">Your Links</h1>
      <button class="btn btn-primary">Create New Link</button>
    </div>

    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table w-full">
                    <thead>
                        <tr>
                            <th>Short Link</th>
                            <th>Original URL</th>
                            <th>Clicks</th>
                            <th>Created</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="links-tbody">
                        <!-- Rows will be inserted here by script -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      const tbody = document.getElementById('links-tbody');

      try {
        const response = await fetch('/api/urls');

        if (response.status === 401) {
          window.location.href = '/login';
          return;
        }

        if (!response.ok) {
          throw new Error('Failed to fetch links');
        }

        const links = await response.json();

        if (links.length === 0) {
            tbody.innerHTML = '<tr><td colspan="5" class="text-center py-8">You haven\'t created any links yet.</td></tr>';
            return;
        }

        const rows = links.map(link => {
          const shortUrl = `${window.location.origin}/${link.ShortPath}`;
          return (
            `<tr>
              <td><a href="${shortUrl}" target="_blank" class="link link-primary">${shortUrl}</a></td>
              <td class="max-w-sm truncate">${link.OriginalURL}</td>
              <td>${link.TotalClicks}</td>
              <td>${new Date(link.CreatedAt).toLocaleDateString()}</td>
              <td>
                <button class="btn btn-sm btn-ghost">Stats</button>
                <button class="btn btn-sm btn-error btn-ghost">Delete</button>
              </td>
            </tr>`
          );
        }).join('');

        tbody.innerHTML = rows;

      } catch (error) {
        tbody.innerHTML = `<tr><td colspan="5" class="text-center py-8 text-error">${error.message}</td></tr>`;
      }
    });
  </script>
</Layout>
